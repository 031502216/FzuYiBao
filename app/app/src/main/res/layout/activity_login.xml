<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    >

    <android.support.design.widget.TextInputLayout
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/custom_dp_50"
        android:layout_marginEnd="@dimen/custom_dp_50"
        android:layout_marginTop="30dp"
        android:id="@+id/hideLayout_login"
        android:textColorHint="@color/colorTextGray"
        >

        <EditText
            android:id="@+id/hide_login"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textSize="25sp"
            android:hint="用户名"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="@dimen/custom_dp_100"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordLayout_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/custom_dp_10"
        android:id="@+id/login"
        android:text="登    录"
        android:textSize="@dimen/album_sp_20"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/custom_dp_50"
        android:layout_marginEnd="@dimen/custom_dp_50"
        android:layout_below="@+id/logo_login"
        android:layout_marginTop="30dp"
        android:id="@+id/userLayout_login"
        android:textColorHint="@color/colorTextGray"
        >

        <EditText
            android:id="@+id/userName_login"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:hint="@string/sno"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/custom_dp_50"
        android:layout_marginEnd="@dimen/custom_dp_50"
        android:layout_below="@+id/userLayout_login"
        android:id="@+id/passwordLayout_login"
        android:textColorHint="@color/colorTextGray"

        >

        <EditText
            android:id="@+id/password_login"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:inputType="textPassword"
            android:hint="@string/password"
            />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logo_login"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
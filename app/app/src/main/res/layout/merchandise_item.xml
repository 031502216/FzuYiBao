<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    >

    <ImageView
        android:id="@+id/merchandiseImage"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_weight="1.7"
        android:background="@drawable/nav_icon"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/merchandiseTitle"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="电动车一辆"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="1dp" />


        <TextView
            android:id="@+id/merchandiseDescription"
            android:ellipsize="end"
            android:padding="5dp"
            android:text="面谈可议价，私聊。面谈可议价面谈可议价"
            android:maxLines="2"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_weight="3.80"
            android:layout_height="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <TextView
                android:id="@+id/merchandisePrice"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="¥ 2700"
                android:textSize="20sp"
                android:layout_alignParentTop="true" />

            <ImageView
                android:src="@drawable/nav_icon"
                android:id="@+id/userHeadView"
                android:layout_below="@+id/merchandisePrice"
                android:layout_marginLeft="@dimen/album_dp_10"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/album_dp_10"/>
            <TextView
                android:id="@+id/userName"
                android:layout_below="@+id/merchandisePrice"
                android:layout_toRightOf="@+id/userHeadView"
                android:textSize="20sp"
                android:text="麻瓜一号"
                android:paddingTop="10dp"
                android:maxLines="1"
                android:paddingLeft="@dimen/custom_dp_5"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/collect1"
                android:id="@+id/collect"
                android:padding="20dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
